<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P4_Examen_120350048.Views.PageLocalizacion">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10, 0">
            
            <Label Text="Latitud"/>
            <Entry Placeholder="latitud" x:Name="latitud" Keyboard="Numeric" IsEnabled="False"/>

            <Label Text="Longitud"/>
            <Entry Placeholder="longitud" x:Name="longitud" Keyboard="Numeric" IsEnabled="False"/>

            <Label Text="Descripcion_larga"/>
            <Entry Placeholder="descripcion larga" x:Name="descripcion_larga" Keyboard="Text"/>

            <Label Text="Descripcion_corta"/>
            <Entry Placeholder="descripcion corta" x:Name="descripcion_corta" Keyboard="Text"/>

            <Button x:Name="btnguardar" Text="Guardar" Clicked="btnguardar_Clicked"/>
            
            <Button x:Name="btnver" Text="Ver Ubicaciones" Clicked="btnver_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>